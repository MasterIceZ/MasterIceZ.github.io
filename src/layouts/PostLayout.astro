---
import { ViewTransitions } from "astro:transitions";

import "@fontsource/ibm-plex-sans-thai";
import "@fontsource/ibm-plex-sans-thai/700.css";
import "@fontsource/fira-sans";
import "@fontsource/fira-sans/700.css";

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.13.11/dist/katex.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Garden | {frontmatter.title}</title>
    <ViewTransitions />
  </head>
  <body transition:animate="slide">
    <div
      class="flex flex-col justify-center min-h-screen py-[4rem] md:pt-[6rem] w-full">
      <h1 class="font-bold text-4xl pb-6 text-center">{frontmatter.title}</h1>
      <h2 class="italic text-center text-gray-500">{frontmatter.date}</h2>
      <article
        class="prose prose-h2:text-3xl prose-h2:font-semibold prose-h2:my-2 prose-p:text-lg prose-p:my-2 px-[1rem] md:px-[10rem] mx-auto w-full">
        <slot />
      </article>
    </div>
    <footer
      class="text-center mb-[4rem] text-lg text-[#0000EE] hover:underline">
      <a href="/garden/posts">Back to Garden's Posts List</a>
    </footer>
  </body>
</html>

<style is:global>
  body {
    font-family: "IBM Plex Sans Thai", "Fira Sans", sans-serif;
  }
  :lang(th) {
    font-family: "IBM Plex Sans Thai", sans-serif;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .prose {
    max-width: 80%;
  }
  @media (max-width: 1024px) {
    .prose {
      max-width: 100%;
    }
    .katex-display {
      overflow-x: auto;
      overflow-y: hidden;
      max-width: 100%;
      height: auto;
      white-space: nowrap;
    }
    .katex {
      display: inline-block;
      max-width: 100%;
    }
    .lemma-box {
      overflow-x: auto;
      max-width: 100%;
      white-space: nowarp;
    }
  }
</style>
