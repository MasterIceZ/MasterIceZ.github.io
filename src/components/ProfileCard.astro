      <a
        href="https://www.instagram.com/iicxx.exe_/?hl=th"
        class="hover:bg-slate-200 dark:bg-purple-800 hover:dark:bg-purple-900 rounded-lg p-2"
        target="_blank"
        rel="noopener noreferrer">
        <FaInstagram className="text-slate-700 dark:text-gray-100" size={30} />
      </a>
      <a
        href="https://www.facebook.com/Borworntat.D/"
        class="hover:bg-slate-200 dark:bg-purple-800 hover:dark:bg-purple-900 rounded-lg p-2"
        target="_blank"
        rel="noopener noreferrer">
        <FaFacebookF className="text-slate-700 dark:text-gray-100" size={30} />
      </a>
      <a
        href="https://twitter.com/_ibwt"
        class="hover:bg-slate-200 dark:bg-purple-800 hover:dark:bg-purple-900 rounded-lg p-2"
        target="_blank"
        rel="noopener noreferrer">
        <FaTwitter className="text-slate-700 dark:text-gray-100" size={30} />
      </a>
    </div>
  </div>
</div>
